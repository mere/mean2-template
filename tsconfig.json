{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/app",
    "rootDir": "./client/app",
    "sourceMap": true,
    "sourceRoot": "/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "declaration": false,
    "noLib": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "client/config",
    "tests/e2e",
    "build/vendor"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
